# Database - Neon (prioritaire) ou PostgreSQL local
DATABASE_URL=postgresql://username:password@ep-xxx-xxx.us-east-1.aws.neon.tech/autopublish?sslmode=require
# OU pour PostgreSQL local :
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=autopublish
# DB_USER=username
# DB_PASSWORD=password

# Server
PORT=3000
NODE_ENV=development

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# Instagram API (REQUIS pour publication automatique)
# Obtenez ces valeurs depuis Meta for Developers (https://developers.facebook.com/)
INSTAGRAM_APP_ID=your_instagram_app_id
INSTAGRAM_APP_SECRET=your_instagram_app_secret
INSTAGRAM_ACCESS_TOKEN=your_long_lived_access_token
INSTAGRAM_ACCOUNT_ID=your_instagram_business_account_id
# Optionnel: ID de la page Facebook li√©e (si utilisation via Facebook)
INSTAGRAM_PAGE_ID=your_facebook_page_id

# Unsplash (optional for backgrounds)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# Scheduling
DEFAULT_POSTING_TIMES=08:00,12:00,18:00,21:00
TIMEZONE=Europe/Paris

# Logging
LOG_LEVEL=info 

# JWT
JWT_SECRET=thesupersecret
JWT_REFRESH_SECRET=thesupersecret